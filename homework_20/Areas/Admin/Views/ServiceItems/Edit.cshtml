@model ServiceItem
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<script src="~/js/ckeditor/ckeditor.js"></script>

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdd" />
            <input type="hidden" asp-for="ImagePath" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Tittle"></label>
                <input asp-for="Tittle" />
                <span asp-validation-for="Tittle"></span>
            </div>
            <div class="div-box">
                <label asp-for="ServiceType"></label>
                <input asp-for="ServiceType" />
                <select name="Type">
                    <option value="Уборка">Уборка</option>
                    <option value="Ремонт">Ремонт</option>
                    <option value="Работа">Работа</option>
                    <option value="Отдых">Отдых</option>
                </select>
                <span asp-validation-for="ServiceType"></span>
            </div>
            <div class="div-box">
                <label asp-for="SubTittle"></label>
                <input asp-for="SubTittle" />
                <span asp-validation-for="SubTittle"></span>
            </div>
            <div class="div-box">
                <label asp-for="Text"></label>
                <textarea asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <div class="div-box">
                <label asp-for="ImagePath"></label>
                <input type="file" name="ImageFile" id="ImageFile" />
                <div>
                    <img class="img-block" src="~/images/@Model.ImagePath" />
                </div>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>



<script>
    window.onload = function() {
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.Text)');
        newCKEdit.updateElement();
    }
</script>