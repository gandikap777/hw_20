@model OpenDeposit

<form asp-area="" asp-controller="Deposits" asp-action="OpenDeposit" method="post">
    <div asp-validation-summary="All"></div>


    <div class="form__group field">
        <input asp-for="AccNumber" type="number" min="0" class="form__field" placeholder="Счет списания" name="AccNumber" id="accNumber" required />
        <label for="name" class="form__label">Счет списания</label>
    </div>

    <div class="form__group field">
        <input asp-for="Period" type="number" min="0" class="form__field" placeholder="Период" name="Period" id="Period" required />
        <label for="name" class="form__label">Период</label>
    </div>

    <div class="form__group field">
        <input asp-for="Capitalization" type="checkbox" class="form__field" placeholder="Капитализация" name="Capitalization" id="Capitalization" required />
        <label for="name" class="form__label">Капитализация</label>
    </div>

    <div class="form__group field">
        <input asp-for="Rate" type="number" min="0" class="form__field" placeholder="Ставка" name="Rate" id="Rate" required />
        <label for="name" class="form__label">Ставка</label>
    </div>

    <div class="form__group field">
        <input asp-for="Summ" type="number" min="0" step="0.01" class="form__field" placeholder="Сумма перевода" name="Summ" id="summ" required />
        <label for="name" class="form__label">Сумма</label>
    </div>

    <input class="button" type="submit" value="Открыть вклад" />
</form>