@model Transfer

<form asp-area="" asp-controller="Accounts" asp-action="Transfer" method="post">
    <div asp-validation-summary="All"></div>


    <div class="form__group field">
        <input asp-for="AccNumberFrom" type="number" min="0" class="form__field" placeholder="Счет отправитель" name="AccNumberFrom" id="accNumber" required />
        <label for="name" class="form__label">Счет отправитель</label>
    </div>

    <div class="form__group field">
        <input asp-for="AccNumberTo" type="number" min="0" class="form__field" placeholder="Счет получатель" name="AccNumberTo" id="accNumber" required />
        <label for="name" class="form__label">Счет получатель</label>
    </div>

    <div class="form__group field">
        <input asp-for="Summ" type="number" min="0" step="0.01" class="form__field" placeholder="Сумма перевода" name="Summ" id="summ" required />
        <label for="name" class="form__label">Сумма</label>
    </div>

    <input class="button" type="submit" value="Выполнить перевод" />
</form>