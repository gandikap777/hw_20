    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $("#AccOpen").click(function () {
                $.ajax({
                    type: "Get",
                    dataType: "html",
                    url: "Accounts/OpenAccount",
                    success: function (result) {
                        $('#results').html(result);
                    }
                });
            });
        });
    </script>

</div>