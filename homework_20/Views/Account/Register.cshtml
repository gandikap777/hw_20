@model UserRegistration

@{
    ViewData["Title"] = "Регистрация";
}

<div>
    <h1>Регистрация</h1>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Register" method="post" autocomplete="off" asp-route-returnUrl="@ViewBag.returnUrl">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="LoginProp"></label>
                <input asp-for="LoginProp"/>
                <span asp-validation-for="LoginProp"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword"/>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <input type="submit" value="Зарегистрироваться" />
            </div>
        </form>
    </div>
</div>
